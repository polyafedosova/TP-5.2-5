<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Paws" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/new_purple</item>
        <item name="colorPrimaryVariant">@color/new_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/new_purple</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/new_green_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/new_purple</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="logout.Paws" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorSecondary">@color/red</item>
    </style>

</resources>