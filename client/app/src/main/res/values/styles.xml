<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MySpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:dropDownVerticalOffset">-100dp</item>
    </style>
    <style name="Text">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColor">@color/new_purple</item>
    </style>
    
    <style name="EditText">
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/new_purple</item>
        <item name="android:textColorHint">@color/new_purple</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="EditText2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">@font/inter</item>
    </style>
    
    <style name="ButtonRadius">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/beige1</item>
        <item name="itemIconTint">@color/icon_menu</item>
        <item name="itemTextColor">@color/icon_menu</item>
    </style>

    <style name="TextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
       <item name="startIconDrawable">@drawable/hot_dog</item>
    </style>

    <style name="logout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>