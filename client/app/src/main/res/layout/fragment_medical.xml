<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="medical.MedicalFragment">

    <RelativeLayout
        android:id="@+id/toolbar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_margin="10dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/toolbar_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter"
                    android:text="Ветклиники"
                    android:textAlignment="center"
                    android:textColor="@color/new_purple"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:queryBackground="@android:color/transparent"
                    android:layout_below="@+id/toolbar_name_text"
                    android:layout_marginTop="20dp"
                    app:queryHint="Введите услугу"
                    app:iconifiedByDefault="false"
                    style="@style/EditText2"
                    android:background="@drawable/edittext_style"/>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_widget_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:queryBackground="@android:color/transparent"
                    android:layout_below="@+id/search_widget"
                    android:layout_marginTop="20dp"
                    app:queryHint="Введите город"
                    app:iconifiedByDefault="false"
                    style="@style/EditText2"
                    android:background="@drawable/edittext_style"/>

                <!--                <Spinner-->
                <!--                    android:id="@+id/price"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_below="@id/search_widget_city"-->
                <!--                    android:layout_marginTop="15dp"-->
                <!--                    android:spinnerMode="dialog" />-->

                <!--                <com.google.android.material.textfield.TextInputLayout-->
                <!--                    android:layout_marginTop="20dp"-->
                <!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"-->
                <!--                    android:hint="Упорядочить"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content">-->

                <!--                    <AutoCompleteTextView-->
                <!--                        android:id="@+id/autoCompletePrice"-->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:inputType="none"-->
                <!--                        android:text="Дешевле"-->
                <!--                        android:textSize="16sp"-->
                <!--                        tools:ignore="LabelFor"/>-->

                <!--                </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="visible"
                android:backgroundTint="@color/item_white"/>

            <ListView
                android:id="@+id/list_item_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" />

            <ListView
                android:id="@+id/list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_widget"
                android:background="@color/white"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>