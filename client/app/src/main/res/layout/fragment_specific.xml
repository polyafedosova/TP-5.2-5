<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".medical.SpecificFragment"
    >

    <RelativeLayout
        android:id="@+id/toolbar_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginHorizontal="30dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/toolbar_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="Название ветклиники"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clinic_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_name_text"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:text="Описание"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clinic_tittle_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clinic_description"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:text="Адрес"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clinic_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clinic_tittle_address"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Шишкова 72/2"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clinic_tittle_nomber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clinic_address"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:text="Адрес"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/clinic_nomber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clinic_tittle_nomber"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="+79511453265"
            android:padding="5dp"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>

</FrameLayout>