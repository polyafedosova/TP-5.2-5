<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onboard.OnboardFragmentSecond">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onboartTextPlace2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:text="TEXT"
            android:textColor="@color/new_purple"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/onboardCompleteButton"
            android:layout_width="180dp"
            android:layout_marginTop="5dp"
            android:layout_height="70dp"
            android:text="Понятно"
            android:textSize="16dp"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@drawable/button_style"
            style="@style/ButtonRadius"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgOnboardPlace2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="45dp"
        />
</FrameLayout>