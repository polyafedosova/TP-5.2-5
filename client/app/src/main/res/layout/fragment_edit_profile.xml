<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newNick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="profile.EditProfileFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_margin="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbar_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ректировать профиль"
                android:fontFamily="@font/inter"
                android:textColor="@color/new_purple"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/newLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Новый логин"
                android:inputType="textPersonName"
                android:layout_marginTop="45dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                style="@style/EditText"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/newName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Новое имя"
                android:inputType="textPersonName"
                android:layout_marginTop="30dp"
                android:textAlignment="textStart"
                android:textSize="20sp"
                style="@style/EditText"
                android:background="@drawable/edittext_style"/>

            <Button
                android:id="@+id/completeProfileRenameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Готово"
                android:background="@drawable/button_style"
                style="@style/ButtonRadius"
                android:textColor="@color/white"
                android:layout_marginTop="120dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/changePasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сменить пароль"
                android:background="@drawable/button_style"
                style="@style/ButtonRadius"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/cancelProfileRenameButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Отмена"
                android:background="@drawable/button_style"
                style="@style/ButtonRadius"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:padding="10dp"/>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>