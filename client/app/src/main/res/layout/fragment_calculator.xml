<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="calculator.CalculatorFragment">

        <TextView
                android:id="@+id/toolbar_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Калькулятор корма"
                android:textSize="30sp"
                android:textStyle="bold" />


        <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Выберите возраст"
            android:layout_marginTop="15dp"
                android:textSize="20sp" />

        <Spinner
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:spinnerMode="dialog" />

        <TextView
                android:id="@+id/info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введите массу:"
                android:layout_marginTop="15dp"
                android:textSize="20sp" />


        <EditText
                android:id="@+id/dogWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="0"
                android:layout_marginTop="15dp"
                android:inputType="number"
                android:textSize="20sp" />

        <TextView
                android:id="@+id/info4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Уровень физической активности:"
                android:layout_marginTop="15dp"
                android:textSize="20sp" />


        <Spinner
                android:id="@+id/movement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:spinnerMode="dialog" />


        <Button
                android:id="@+id/calculate_eat"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="15dp"
                android:text="Рассчитать" />



        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/info3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Суточная норма грамм:"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/mass2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="ответ"
                    android:inputType="number"
                    android:textAlignment="textEnd"
                    android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>