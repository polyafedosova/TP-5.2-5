<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        tools:context="calculator.CalculatorFragment">

        <TextView
            android:id="@+id/toolbar_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Калькулятор корма"
            android:fontFamily="@font/inter"
            android:textColor="@color/new_purple"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="30dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Возраст"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Меньше 6 месяцев"
                android:textSize="20sp"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:id="@+id/dogWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Вес"
            android:maxLength="3"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:padding="20dp"
            style="@style/EditText2"
            android:background="@drawable/edittext_style2" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="30dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Уровень физической активности"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/movement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="Низкая"
                android:textSize="20sp"
                tools:ignore="LabelFor"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/calculate_eat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Рассчитать"
            android:background="@drawable/button_style"
            style="@style/ButtonRadius"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Суточная норма еды (гр) :"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter"
                android:textColor="@color/new_purple"
                android:textAlignment="center"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/mass2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="number"
                android:fontFamily="@font/inter"
                android:textColor="@color/new_purple"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>