<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="profile.LoginFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_margin="10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Авторизация"
                android:fontFamily="@font/inter"
                android:textColor="@color/new_purple"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/corgi_1"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginTop="45dp"
                android:src="@drawable/corgi1"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <EditText
                android:id="@+id/userLoginEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Введите логин"
                android:layout_marginTop="45dp"
                android:inputType="text"
                android:textAlignment="textStart"
                android:textSize="20sp"
                style="@style/EditText"
                android:background="@drawable/edittext_style"/>

            <EditText
                android:id="@+id/userPasswordEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ведите пароль"
                android:layout_marginTop="15dp"
                android:inputType="textPassword"
                android:textSize="20sp"
                style="@style/EditText"
                android:background="@drawable/edittext_style"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Продолжить"
                android:background="@drawable/button_style"
                style="@style/ButtonRadius"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/toRegisterButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Регистрация"
                android:background="@drawable/button_style"
                style="@style/ButtonRadius"
                android:textColor="@color/white"/>


            <ProgressBar
                android:id="@+id/progressBar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:elevation="10dp"
                android:visibility="gone" />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>